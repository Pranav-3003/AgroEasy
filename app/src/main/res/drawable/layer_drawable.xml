<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="100dp"
    android:height="150dp">  <!-- Specify the height you want -->
    <shape android:shape="rectangle">
        <corners android:radius="12dp" /> <!-- Rounded corners -->
        <solid android:color="#E0F7FA" /> <!-- Background color -->
        <stroke
            android:width="2dp"
            android:color="#00897B" /> <!-- Optional border -->
    </shape>
</item>

    </layer-list>
